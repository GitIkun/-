.footbox {
	width: 100%;
	height: 90rpx;
	background-color:skyblue;
	display: flex;
	align-items: center;
	justify-content: center;
	padding-bottom: 20rpx;
}
.footbox image {
	border-radius: 30rpx;
	margin-left: 20rpx;
	width: 70rpx;
	height: 70rpx;
}
.footbox input {
	width: 60%;
	height: 60rpx;
	background-color: #FFF;
	border-radius: 15rpx;
	margin:0rpx 20rpx;
	padding-left: 20rpx;
}
.footbox view {
	width: 20%;
	background-color: #fff;
	margin-right: 10rpx;
	height: 60rpx;
	font-size: 40rpx;
	font-weight:bolder;
	line-height:60rpx;
	text-align: center;
	border-radius: 15rpx;
}